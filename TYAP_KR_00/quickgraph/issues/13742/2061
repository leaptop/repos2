using System;
using System.Collections.Generic;
using System.IO;
using System.Text;
using QuickGraph.Graphviz.Dot;

namespace QuickGraph.Graphviz
{
    /// <summary>
    /// Default dot engine implementation, writes dot code to disk
    /// </summary>
    public sealed class FileDotEngine : IDotEngine
    {
        public string Run(GraphvizImageType imageType, string dot, string outputFilePath)
        {
            // TODO: Create contract interface class for IDotEngine, if not already created.
            if (String.IsNullOrEmpty(outputFilePath))
            {
                throw new ArgumentException("Argument contained a null reference or empty string.", "outputFilePath");
            }

            File.WriteAllText(outputFilePath, dot);
            return outputFilePath;
        }
    }
}
